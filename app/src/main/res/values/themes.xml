<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="waatheme1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul1</item>
        <item name="colorPrimaryVariant">@color/azul2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul3</item>
        <item name="colorSecondaryVariant">@color/azul4</item>
        <item name="colorOnSecondary">@color/marron</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="waatheme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul4</item>
        <item name="colorPrimaryVariant">@color/azul3</item>
        <item name="colorOnPrimary">@color/azul1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul2</item>
        <item name="colorSecondaryVariant">@color/azul1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>